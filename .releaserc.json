{
  "branches": ["main"],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": ".pio/build/esp12e/firmware.bin",
            "label": "Firmware binary"
          },
          {
            "path": ".pio/build/esp12e/littlefs.bin",
            "label": "LittleFS partition binary"
          },
          { "path": ".pio/build/project.checksum", "label": "Project checksum" }
        ]
      }
    ]
  ]
}
